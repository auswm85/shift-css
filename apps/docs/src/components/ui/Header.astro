---
import Logo from './Logo.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="docs-header">
	<div class="docs-header-left">
		<!-- Mobile menu toggle -->
		<button
			type="button"
			class="docs-mobile-toggle"
			aria-label="Open navigation menu"
			aria-expanded="false"
			aria-controls="mobile-menu"
			data-mobile-toggle
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				aria-hidden="true"
			>
				<line x1="4" x2="20" y1="12" y2="12"></line>
				<line x1="4" x2="20" y1="6" y2="6"></line>
				<line x1="4" x2="20" y1="18" y2="18"></line>
			</svg>
		</button>

		<Logo />
	</div>

	<div class="docs-header-right">
		<!-- Search button -->
		<button
			type="button"
			class="docs-search-button"
			aria-label="Search documentation"
			data-search-toggle
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="16"
				height="16"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				aria-hidden="true"
			>
				<circle cx="11" cy="11" r="8"></circle>
				<path d="m21 21-4.3-4.3"></path>
			</svg>
			<span class="docs-search-text">Search</span>
			<kbd class="docs-search-kbd">Ctrl K</kbd>
		</button>

		<!-- GitHub link -->
		<a
			href="https://github.com/your-username/shift-css"
			class="header-icon-link"
			aria-label="View on GitHub"
			target="_blank"
			rel="noopener noreferrer"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="20"
				height="20"
				viewBox="0 0 24 24"
				fill="currentColor"
				aria-hidden="true"
			>
				<path
					d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
				/>
			</svg>
		</a>

		<ThemeToggle />
	</div>
</header>

<style>
	.docs-search-text {
		display: none;
	}

	@media (min-width: 640px) {
		.docs-search-text {
			display: inline;
		}
	}

	.header-icon-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		color: var(--s-text-secondary);
		border-radius: var(--s-radius-md);
		transition:
			background 0.15s,
			color 0.15s;
	}

	.header-icon-link:hover {
		background: var(--s-surface-hover);
		color: var(--s-text-primary);
	}
</style>

<script>
	function initMobileToggle() {
		const toggle = document.querySelector('[data-mobile-toggle]');
		const menu = document.querySelector('#mobile-menu') as HTMLDialogElement;

		if (!toggle || !menu) return;

		toggle.addEventListener('click', () => {
			menu.showModal();
			toggle.setAttribute('aria-expanded', 'true');
		});

		menu.addEventListener('close', () => {
			toggle.setAttribute('aria-expanded', 'false');
		});
	}

	function initSearchToggle() {
		const toggle = document.querySelector('[data-search-toggle]');
		const dialog = document.querySelector('#search-dialog') as HTMLDialogElement;

		if (!toggle || !dialog) return;

		toggle.addEventListener('click', () => {
			dialog.showModal();
		});

		// Keyboard shortcut (Ctrl+K or Cmd+K)
		document.addEventListener('keydown', (e) => {
			if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
				e.preventDefault();
				dialog.showModal();
			}
		});
	}

	// Initialize on load
	initMobileToggle();
	initSearchToggle();

	// Re-init after Astro page transitions
	document.addEventListener('astro:after-swap', () => {
		initMobileToggle();
		initSearchToggle();
	});
</script>
