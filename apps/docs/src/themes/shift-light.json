{
  "name": "Shift Light",
  "type": "light",
  "colors": {
    "editor.background": "#ffffff",
    "editor.foreground": "#1a1a1a"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#6b7280"
      }
    },
    {
      "name": "Keyword",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator.new",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#a21caf"
      }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted"],
      "settings": {
        "foreground": "#047857"
      }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric", "constant.language"],
      "settings": {
        "foreground": "#0369a1"
      }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function", "meta.function-call"],
      "settings": {
        "foreground": "#7c3aed"
      }
    },
    {
      "name": "Class",
      "scope": ["entity.name.class", "entity.name.type.class", "support.class"],
      "settings": {
        "foreground": "#b45309"
      }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": {
        "foreground": "#1a1a1a"
      }
    },
    {
      "name": "Property",
      "scope": ["variable.other.property", "support.type.property-name", "meta.object-literal.key"],
      "settings": {
        "foreground": "#0891b2"
      }
    },
    {
      "name": "CSS Property",
      "scope": [
        "support.type.property-name.css",
        "meta.property-name.css",
        "variable.css",
        "variable.argument.css"
      ],
      "settings": {
        "foreground": "#0369a1"
      }
    },
    {
      "name": "CSS Value",
      "scope": ["support.constant.property-value.css", "meta.property-value.css"],
      "settings": {
        "foreground": "#047857"
      }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag", "punctuation.definition.tag"],
      "settings": {
        "foreground": "#115e59"
      }
    },
    {
      "name": "Attribute Name",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#c2410c"
      }
    },
    {
      "name": "Attribute Value",
      "scope": ["string.quoted.double.html", "string.quoted.single.html"],
      "settings": {
        "foreground": "#047857"
      }
    },
    {
      "name": "Operator",
      "scope": ["keyword.operator", "punctuation.separator"],
      "settings": {
        "foreground": "#525252"
      }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation", "meta.brace", "punctuation.definition.string"],
      "settings": {
        "foreground": "#525252"
      }
    },
    {
      "name": "Type",
      "scope": ["entity.name.type", "support.type", "support.type.primitive"],
      "settings": {
        "foreground": "#0891b2"
      }
    },
    {
      "name": "Constant",
      "scope": ["constant.other", "variable.other.constant"],
      "settings": {
        "foreground": "#b45309"
      }
    },
    {
      "name": "Regex",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#dc2626"
      }
    }
  ]
}
