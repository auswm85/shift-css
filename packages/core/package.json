{
  "name": "@shift-css/core",
  "version": "0.5.0",
  "description": "Zero-runtime, OKLCH-native CSS framework with cascade layers and native light-dark() theming",
  "type": "module",
  "main": "./dist/shift.css",
  "types": "./types/index.d.ts",
  "exports": {
    ".": "./dist/shift.css",
    "./min": "./dist/shift.min.css",
    "./reset": "./dist/reset.css",
    "./tokens": "./dist/tokens.css",
    "./components/badge": "./dist/components/badge.css",
    "./components/button": "./dist/components/button.css",
    "./components/card": "./dist/components/card.css",
    "./components/input": "./dist/components/input.css",
    "./components/modal": "./dist/components/modal.css",
    "./components/prose": "./dist/components/prose.css",
    "./components/skip-link": "./dist/components/skip-link.css",
    "./components/surface": "./dist/components/surface.css",
    "./components/tooltip": "./dist/components/tooltip.css",
    "./utils/layout": "./dist/utils/layout.css",
    "./utils/spacing": "./dist/utils/spacing.css",
    "./utils/flex": "./dist/utils/flex.css",
    "./utils/typography": "./dist/utils/typography.css",
    "./utils/visibility": "./dist/utils/visibility.css",
    "./types": "./types/index.d.ts",
    "./types/react": "./types/react.d.ts",
    "./types/vue": "./types/vue.d.ts",
    "./types/attributes": "./types/attributes.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:tokens": "tsx scripts/generate-colors.ts",
    "dev": "tsx scripts/build.ts --watch",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:unit": "bun test tests/*.test.ts",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --project=visual-chrome",
    "test:visual:all": "playwright test tests/e2e/*.visual.ts",
    "test:a11y": "playwright test --project=accessibility",
    "test:contrast": "playwright test --project=contrast",
    "test:update-snapshots": "playwright test --update-snapshots",
    "serve-fixtures": "bun run scripts/serve-fixtures.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.50.1",
    "@types/bun": "^1.3.6",
    "@types/node": "^22.10.5",
    "lightningcss": "^1.30.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "css",
    "css-framework",
    "oklch",
    "design-tokens",
    "cascade-layers",
    "light-dark",
    "zero-runtime",
    "color-system"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/auswm85/shift-css.git"
  },
  "bugs": {
    "url": "https://github.com/auswm85/shift-css/issues"
  },
  "homepage": "https://github.com/auswm85/shift-css#readme",
  "sideEffects": [
    "**/*.css"
  ]
}
