---
/**
 * Input Component
 *
 * @example
 * <Input placeholder="Enter text" />
 * <Input type="email" size="lg" />
 * <Input error="Invalid email" />
 */

export interface Props {
	/** Input type */
	type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search';
	/** Input size */
	size?: 'sm' | 'lg';
	/** Placeholder text */
	placeholder?: string;
	/** Input name */
	name?: string;
	/** Input id */
	id?: string;
	/** Input value */
	value?: string;
	/** Disabled state */
	disabled?: boolean;
	/** Required field */
	required?: boolean;
	/** Error message (sets aria-invalid) */
	error?: string;
	/** Additional classes */
	class?: string;
}

const {
	type = 'text',
	size,
	placeholder,
	name,
	id,
	value,
	disabled = false,
	required = false,
	error,
	class: className,
	...rest
} = Astro.props;
---

<input
	s-input
	s-size={size}
	type={type}
	placeholder={placeholder}
	name={name}
	id={id}
	value={value}
	disabled={disabled}
	required={required}
	aria-invalid={error ? 'true' : undefined}
	class={className}
	{...rest}
/>
