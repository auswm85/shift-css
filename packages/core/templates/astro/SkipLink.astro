---
/**
 * Skip Link Component
 *
 * Accessible skip navigation link that appears on focus.
 *
 * @example
 * <SkipLink href="#main-content">Skip to main content</SkipLink>
 */

export interface Props {
	/** Target anchor */
	href: string;
	/** Additional classes */
	class?: string;
}

const {
	href,
	class: className,
	...rest
} = Astro.props;
---

<a
	s-skip-link
	href={href}
	class={className}
	{...rest}
>
	<slot>Skip to main content</slot>
</a>
